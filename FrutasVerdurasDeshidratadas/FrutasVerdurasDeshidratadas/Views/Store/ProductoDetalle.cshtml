@model IEnumerable<FrutasVerdurasDeshidratadas.DAL.Tbl_Product>

@{
    ViewBag.Title = "ProductoDetalle";
    Layout = "~/Views/Shared/_master.cshtml";
}

<div class="bottom-area d-flex px-3">
    <div class="m-auto d-flex">
        @if (Model[_element - 1].ActualStock > 0)
        {
            <a href="@Url.Action("AgregaAlCarrito", "Tienda", new { _productId =  @Html.DisplayFor(modelItem => Model[_element - 1].ProductId), _posicion = "salsas" }, null)" class="buy-now d-flex justify-content-center align-items-center mx-1">
                <span><i class="ion-ios-cart"></i></span>
            </a>
        }
        else
        {
            <p style="color:#FF0000" ;>No hay por el momento.</p>
        }
    </div>
</div>


